{
  "name": "nostr-keyx",
  "version": "1.3.0",
  "description": "A NIP-07 browser extension that uses the OS's native keychain application to protect your private keys.",
  "private": true,
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build-js": "esbuild --bundle --minify --format=esm --outdir=dist/extension src/*",
    "build-node": "esbuild --bundle --minify --format=esm --platform=node --outdir=dist/macos --out-extension:.js=.mjs node/*.ts ; cp -p dist/macos/*.mjs dist/windows ; cp -p dist/macos/*.mjs dist/linux",
    "build": "rm -rf dist ; cp -rp public dist ; concurrently \"npm:build-*\"",
    "watch-js": "esbuild --watch --bundle --sourcemap=inline --format=esm --outdir=dist/extension src/*",
    "watch-node": "esbuild --watch --bundle --sourcemap=inline --format=esm --platform=node --outdir=dist/unix --out-extension:.js=.mjs node/*.ts",
    "watch": "concurrently \"npm:watch-*\"",
    "pack": "rm -f *.tgz *.zip ; npm pack ; tar tfz *.tgz | sed -e 's|^package/||' | zip -r@ `ls *.tgz | sed -e 's|\\.tgz|\\.zip|'`",
    "genkey": "tsx bin/genkey.ts",
    "npub2hex": "tsx bin/npub2hex.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/susumuota/nostr-keyx.git"
  },
  "keywords": [
    "nostr",
    "NIP-07",
    "chrome-extension",
    "browser-extension",
    "encryption",
    "keychain"
  ],
  "author": "Susumu OTA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/susumuota/nostr-keyx/issues"
  },
  "homepage": "https://github.com/susumuota/nostr-keyx#readme",
  "devDependencies": {
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/chrome": "^0.0.217",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.10",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.11.10",
    "@noble/secp256k1": "^1.7.1",
    "@scure/base": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
